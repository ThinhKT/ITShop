
@{
    ViewBag.Title = "Confirm";
    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
    Layout = null;
}
<br />
<br />
<div class="alert alert-warning" id="previous">
    <strong>Xác nhận  tài khoản của bạn.</strong>
    <input type="submit" class="btn btn-warning" value="Xác nhận" onclick="Verified()" />
</div>
<div class="alert alert-success" id="after">
    <strong><span class="glyphicon glyphicon-ok"></span>Tài khoản của bạn đã được kích hoạt.</strong>
</div>
<script>
    function Verified() {
        $.ajax({
            type: "post",
            url: "Account/RegisterConfirm",
            data: { 'regId': '@ViewBag.regID' },
            success: function (msg) {
                $("#previous").hide();
                $("#after").show();
                alert(msg);
            }
        })
    }
</script>

